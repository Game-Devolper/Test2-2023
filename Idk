            color: yellow;
        }
        
        .green {
            color: #008000;
        }
        
        .blue {
            color: rgb(0, 0, 255);
        }
        
        .indigo {
            color: rgb(75, 0, 130);
        }
        
        .violet {
            color: rgb(148, 0, 211);
        }
    </style>
